{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comment_index') }}">
        <button class="buttonsActions button2" style="float: right;">Back to list</button>
    </a>

    <a href="{{ path('comment_edit', {'id': comment.id}) }}">
        <button class="buttonsActions button2" style="float: right;">Edit</button>
    </a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
