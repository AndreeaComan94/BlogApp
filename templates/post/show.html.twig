{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">
        <button class="buttonsActions button2" style="float: right;">Back to list</button>
    </a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">
        <button class="buttonsActions button2" style="float: right;">Edit</button>
    </a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
